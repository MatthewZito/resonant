{
	"include": ["."],
  "compilerOptions": {
		"composite": true,
		"rootDir": "src",
    "declaration": true,
    "declarationDir": ".build",
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "lib": ["ESNext"],
		"types": ["node", "vitest/globals"],
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
